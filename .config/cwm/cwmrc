unbind-key M-Left
unbind-key M-Right
bind-key M-Return	alacritty
bind-key M-p	    dmenu_run
bind-key CM-1		group-only-1
bind-key CM-2		group-only-2
bind-key CM-3		group-only-3
bind-key CMS-0		window-movetogroup-0
bind-key CMS-1		window-movetogroup-1
bind-key CMS-2		window-movetogroup-2
bind-key CMS-3		window-movetogroup-3
bind-key M-j		window-cycle
bind-key M-k		window-cycle
bind-key M-t		window-maximize
bind-key M-v		window-vtile
bind-key CM-l		slock

bind-mouse M-2 window-lower
bind-mouse M-3 window-resize

bind-key XF86AudioLowerVolume "/bin/pactl set-sink-volume @DEFAULT_SINK@ -5%"
bind-key XF86AudioRaiseVolume "/bin/pactl set-sink-volume @DEFAULT_SINK@ +5%"
bind-key XF86AudioMute "/bin/pactl set-sink-mute @DEFAULT_SINK@ toggle"

bind-key XF86MonBrightnessUp    "/bin/light -T 1.4"
bind-key XF86MonBrightnessDown  "/bin/light -T 0.72"

color activeborder	"#333"
color inactiveborder	"#000"
color menubg		"#a8ff60"
color menufg		"#000"

fontname		"spleen:pixelsize=20"
snapdist		20
sticky			yes

command firefox		"firefox"
command gimp		"gimp"
command gthumb		"gthumb"
command inkscape	"inkscape"
command iridium		"iridium --enable-unveil"
command office		"libreoffice"
