" CTRL + P
set runtimepath^=~/.config/vim/bundle/ctrlp.vim

" designed for vim 8+
" (see rwx.gg/vi for help)
let skip_defaults_vim=1
set nocompatible

" activate line numbers
set number

" disable relative line numbers, remove no to sample it
set norelativenumber

" turn info in tray on even if default
set ruler

" tabs are the devil
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
set smartindent
set smarttab
set autoindent

syntax on

" more risky, but cleaner
set nobackup
set noswapfile
set nowritebackup

" keep the terminal title updated
set laststatus=0
set icon

"This unsets the "last search pattern" register by hitting return
nnoremap <CR> :noh<CR><CR>

" high contrast for streaming, etc.
set background=dark
colorscheme gruvbox

" enable omni-completion
"set omnifunc=syntaxcomplete#Complete

" pane switching vi style (duh)
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l

" functions keys
map <F1> :w<CR>:!run <c-r>=expand('%:p')<CR><CR>
map <F5> :0r !template <c-r>=expand('%:t')<CR><CR>

" disable arrow keys (vi muscle memory)
noremap <up> :echoerr "Umm, use k instead"<CR>
noremap <down> :echoerr "Umm, use j instead"<CR>
noremap <left> :echoerr "Umm, use h instead"<CR>
noremap <right> :echoerr "Umm, use l instead"<CR>
inoremap <up> <NOP>
inoremap <down> <NOP>
inoremap <left> <NOP>
inoremap <right> <NOP>
